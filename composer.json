{
    "name": "artack/color",
    "type": "library",
    "description": "Color helper library for converting between RGB, HSV and HEX and create interpolation.",
    "keywords": ["color", "conversion", "interpolation"],
    "license": "MIT",
    "authors": [
        {
            "name": "ARTACK WebLab GmbH",
            "homepage": "https://www.artack.ch"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "webmozart/assert": "^1.2",
        "clue/graph": "^0.9.0",
        "graphp/algorithms": "^0.8.1"
    },
    "autoload": {
        "psr-4": {"Artack\\Color\\": "src/"}
    },
    "autoload-dev": {
        "psr-4": { "Artack\\Color\\": "tests/" }
    },
    "require-dev": {
        "phpunit/phpunit": "^6.5",
        "symfony/var-dumper": "^3.4"
    }
}
